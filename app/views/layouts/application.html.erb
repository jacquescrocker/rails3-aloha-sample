<!DOCTYPE html>
<html>
<head>
  <title><%= Settings.title %></title>
  <%= stylesheet_link_tag "bipolar", "application" %>
  <%= javascript_include_tag "jquery", "rails", "application" %>

  <% if admin? %>
    <script type="text/javascript" src="/aloha/aloha.js"></script>
    <script type="text/javascript" src="/aloha/plugins/com.gentics.aloha.plugins.Format/plugin.js"></script>
    <script type="text/javascript" src="/aloha/plugins/com.gentics.aloha.plugins.Table/plugin.js"></script>
    <script type="text/javascript" src="/aloha/plugins/com.gentics.aloha.plugins.List/plugin.js"></script>

    <%= javascript_include_tag "inline_editing" %>
  <% end %>

  <%= csrf_meta_tag %>
</head>
<body>

  <div id="left">
    <div id="outer">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="clear"></div>
      <img class="lime" src="/images/lime.jpg" alt="" /><h1><span class="green">b</span>i<span class="yellow">p</span>olar</h1><br /><br />

      <%= link_to "Home", root_url, :class => "nav" %>

      <%# more content links
        <a class="nav" href="#">About</a>
        <a class="nav" href="#">Blog</a>
        <a class="nav" href="#">Contact</a>
      %>

      <% if admin? %>
        <div class="admin">
          <%= yield :admin %>
        </div>
      <% else %>
        <%= link_to "Login", login_path, :class => "nav" %>
      <% end %>

    </div>


  </div>

  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
